// Prisma Schema for TesseraOS
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MEMBER
  CLIENT
}

enum ProjectStatus {
  NEW
  IN_PROGRESS
  PENDING
  DELAYED
  COMPLETED
  CANCELED
}

enum TaskStatus {
  BACKLOG
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum InvoiceStatus {
  DRAFT
  PENDING
  PAID
  OVERDUE
  CANCELED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(MEMBER)
  avatar    String?
  clientId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  client        Client?  @relation(fields: [clientId], references: [id], onDelete: SetNull)
  assignedTasks Task[]
  messages      Message[]
  uploadedFiles File[]

  @@index([clientId])
  @@map("users")
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  company   String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users    User[]
  projects Project[]
  invoices Invoice[]

  @@map("clients")
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(NEW)
  clientId    String?
  startDate   DateTime?
  dueDate     DateTime?
  progress    Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  client   Client?   @relation(fields: [clientId], references: [id], onDelete: SetNull)
  tasks    Task[]
  invoices Invoice[]
  messages Message[]
  files    File[]

  @@index([clientId])
  @@index([status])
  @@map("projects")
}

model Task {
  id           String        @id @default(cuid())
  title        String
  description  String?
  status       TaskStatus    @default(TODO)
  priority     TaskPriority? @default(MEDIUM)
  projectId    String
  assignedToId String?
  dueDate      DateTime?
  order        Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Relations
  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignedTo User?   @relation(fields: [assignedToId], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([assignedToId])
  @@index([status])
  @@map("tasks")
}

model Invoice {
  id          String        @id @default(cuid())
  number      String        @unique
  projectId   String?
  clientId    String
  status      InvoiceStatus @default(DRAFT)
  issueDate   DateTime
  dueDate     DateTime
  paidDate    DateTime? // Renamed from paymentDate - migration handles column rename
  subtotal    Float         @default(0)
  tax         Float         @default(0)
  total       Float         @default(0)
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  project Project?      @relation(fields: [projectId], references: [id], onDelete: SetNull)
  client  Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  items   InvoiceItem[]

  @@index([clientId])
  @@index([projectId])
  @@index([status])
  @@map("invoices")
}

model InvoiceItem {
  id          String  @id @default(cuid())
  invoiceId   String
  name        String
  description String?
  quantity    Float
  rate        Float
  amount      Float

  // Relations
  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("invoice_items")
}

model Message {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  content   String   @db.Text
  fileIds   String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
  @@map("messages")
}

model File {
  id           String   @id @default(cuid())
  name         String
  size         Int
  mimeType     String
  key          String   // S3/storage key
  url          String
  projectId    String?
  uploadedById String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  project    Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  uploadedBy User     @relation(fields: [uploadedById], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([uploadedById])
  @@map("files")
}
